@model DoctorDto

@{
    ViewData["Title"] = "Eliminar Doctor";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Eliminar Doctor</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <strong>¿Está seguro que desea eliminar este doctor?</strong>
                    <p class="mb-0 mt-2">Esta acción no se puede deshacer.</p>
                </div>
                
                <dl class="row">
                    <dt class="col-sm-4">Nombre Completo:</dt>
                    <dd class="col-sm-8">@Model.Nombre @Model.Apellido</dd>
                    
                    <dt class="col-sm-4">Matrícula:</dt>
                    <dd class="col-sm-8">@Model.Matricula</dd>
                    
                    <dt class="col-sm-4">Especialidad:</dt>
                    <dd class="col-sm-8">@Model.Especialidad</dd>
                    
                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@(Model.Email ?? "-")</dd>
                </dl>
                
                <form asp-action="Delete" method="post">
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Confirmar Eliminación
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
