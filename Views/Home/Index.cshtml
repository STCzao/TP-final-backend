@{
    ViewData["Title"] = "Inicio";
}

<div class="hero-section rounded mb-4">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-3">
            Sistema de Turnero Médico
        </h1>
        <p class="lead mb-4">
            Gestión eficiente de turnos, pacientes y doctores
        </p>
        <div class="d-flex gap-3 justify-content-center">
            <a href="/Turnos/Create" class="btn btn-light btn-lg">
                <i class="bi bi-plus-circle"></i> Agendar Turno
            </a>
            <a href="/Turnos" class="btn btn-outline-light btn-lg">
                <i class="bi bi-calendar3"></i> Ver Turnos
            </a>
        </div>
    </div>
</div>

<div class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="card feature-card">
            <div class="card-body">
                <h3 class="card-title h5">Pacientes</h3>
                <p class="card-text text-muted">
                    Gestiona la información completa de tus pacientes
                </p>
                <a href="/Pacientes" class="btn btn-primary">
                    Ver Pacientes
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card feature-card">
            <div class="card-body">
                <h3 class="card-title h5">Doctores</h3>
                <p class="card-text text-muted">
                    Administra el personal médico y especialidades
                </p>
                <a href="/Doctores" class="btn btn-primary">
                    Ver Doctores
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card feature-card">
            <div class="card-body">
                <h3 class="card-title h5">Turnos</h3>
                <p class="card-text text-muted">
                    Control total sobre la agenda de turnos médicos
                </p>
                <a href="/Turnos" class="btn btn-primary">
                    Ver Turnos
                </a>
            </div>
        </div>
    </div>
</div>