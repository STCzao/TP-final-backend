@model PacienteDto

@{
    ViewData["Title"] = "Detalles del Paciente";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0"><i class="bi bi-person"></i> Detalles del Paciente</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Nombre Completo:</dt>
                    <dd class="col-sm-8">@Model.Nombre @Model.Apellido</dd>
                    
                    <dt class="col-sm-4">DNI:</dt>
                    <dd class="col-sm-8">@Model.Dni</dd>
                    
                    <dt class="col-sm-4">Fecha de Nacimiento:</dt>
                    <dd class="col-sm-8">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>
                    
                    <dt class="col-sm-4">Edad:</dt>
                    <dd class="col-sm-8">
                        @{
                            var edad = DateTime.Now.Year - Model.FechaNacimiento.Year;
                            if (DateTime.Now < Model.FechaNacimiento.AddYears(edad)) edad--;
                        }
                        @edad años
                    </dd>
                    
                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@(Model.Email ?? "-")</dd>
                    
                    <dt class="col-sm-4">Teléfono:</dt>
                    <dd class="col-sm-8">@(Model.Telefono ?? "-")</dd>
                    
                    <dt class="col-sm-4">Dirección:</dt>
                    <dd class="col-sm-8">@(Model.Direccion ?? "-")</dd>
                    
                    <dt class="col-sm-4">Fecha de Registro:</dt>
                    <dd class="col-sm-8">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>
                </dl>
                
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver al Listado
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
