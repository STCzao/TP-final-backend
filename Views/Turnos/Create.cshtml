@model CreateTurnoDto

@{
    ViewData["Title"] = "Crear Turno";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-calendar-plus"></i> Nuevo Turno</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="PacienteId" class="form-label">Paciente *</label>
                        <select asp-for="PacienteId" class="form-select" asp-items="@ViewBag.Pacientes">
                            <option value="">-- Seleccione un paciente --</option>
                        </select>
                        <span asp-validation-for="PacienteId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="DoctorId" class="form-label">Doctor *</label>
                        <select asp-for="DoctorId" class="form-select" asp-items="@ViewBag.Doctores">
                            <option value="">-- Seleccione un doctor --</option>
                        </select>
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaHora" class="form-label">Fecha *</label>
                            <input asp-for="FechaHora" type="date" class="form-control" />
                            <span asp-validation-for="FechaHora" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="hora" class="form-label">Hora *</label>
                            <input asp-for="FechaHora" type="time" class="form-control" />
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Motivo" class="form-label">Motivo de la Consulta</label>
                        <textarea asp-for="Motivo" class="form-control" rows="3" placeholder="Describa brevemente el motivo de la consulta"></textarea>
                        <span asp-validation-for="Motivo" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Observaciones" class="form-label">Observaciones</label>
                        <textarea asp-for="Observaciones" class="form-control" rows="2" placeholder="Observaciones adicionales (opcional)"></textarea>
                        <span asp-validation-for="Observaciones" class="text-danger"></span>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Nota:</strong> El sistema validará automáticamente la disponibilidad del doctor en el horario seleccionado.
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Agendar Turno
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Establecer fecha mínima como hoy
        document.querySelector('input[type="date"]').min = new Date().toISOString().split('T')[0];
    </script>
}
