@model UpdateTurnoDto

@{
    ViewData["Title"] = "Editar Turno";
    var id = ViewBag.Id;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning">
                <h4 class="mb-0"><i class="bi bi-pencil"></i> Editar Turno</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-route-id="@id" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="PacienteId" class="form-label">Paciente *</label>
                        <select asp-for="PacienteId" class="form-select" asp-items="@ViewBag.Pacientes">
                            <option value="">-- Seleccione un paciente --</option>
                        </select>
                        <span asp-validation-for="PacienteId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="DoctorId" class="form-label">Doctor *</label>
                        <select asp-for="DoctorId" class="form-select" asp-items="@ViewBag.Doctores">
                            <option value="">-- Seleccione un doctor --</option>
                        </select>
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="fechaInput" class="form-label">Fecha *</label>
                            <input type="date" id="fechaInput" class="form-control"
                                value="@Model.FechaHora.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="FechaHora" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="horaInput" class="form-label">Horario disponible *</label>
                            <select id="horaInput" class="form-select">
                                <option value="@Model.FechaHora.ToString("HH:mm")" selected>
                                    @Model.FechaHora.ToString("HH:mm") (actual)
                                </option>
                            </select>
                        </div>
                    </div>
                    <input type="hidden" asp-for="FechaHora" id="fechaHoraHidden"
                        value="@Model.FechaHora.ToString("yyyy-MM-dd")T@Model.FechaHora.ToString("HH:mm"):00" />
                    
                    <div class="mb-3">
                        <label asp-for="Estado" class="form-label">Estado *</label>
                        <select asp-for="Estado" class="form-select" asp-items="@ViewBag.Estados"></select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Motivo" class="form-label">Motivo de la Consulta</label>
                        <textarea asp-for="Motivo" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Motivo" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Observaciones" class="form-label">Observaciones</label>
                        <textarea asp-for="Observaciones" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Observaciones" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save"></i> Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        const turnoId = @id;
        const doctorSelect = document.getElementById('DoctorId');
        const fechaInput = document.getElementById('fechaInput');
        const horaSelect = document.getElementById('horaInput');
        const fechaHoraHidden = document.getElementById('fechaHoraHidden');

        // Fecha mínima: mañana
        const manana = new Date();
        manana.setDate(manana.getDate() + 1);
        fechaInput.min = manana.toISOString().split('T')[0];

        async function cargarSlots() {
            const doctorId = doctorSelect.value;
            const fecha = fechaInput.value;

            horaSelect.disabled = true;
            fechaHoraHidden.value = '';

            if (!doctorId || !fecha) return;

            try {
                const res = await fetch(`/api/Turnos/slots?doctorId=${doctorId}&fecha=${fecha}&turnoId=${turnoId}`);
                const slots = await res.json();

                const horaActual = horaSelect.querySelector('option[selected]')?.value;

                if (slots.length === 0) {
                    horaSelect.innerHTML = '<option value="">No hay turnos disponibles para este día</option>';
                    return;
                }

                horaSelect.innerHTML = '<option value="">-- Seleccione un horario --</option>';
                slots.forEach(s => {
                    const opt = document.createElement('option');
                    opt.value = s;
                    opt.textContent = s;
                    if (s === horaActual) opt.selected = true;
                    horaSelect.appendChild(opt);
                });
                horaSelect.disabled = false;

                // Reconstruir el hidden si el slot actual sigue disponible
                if (horaSelect.value) {
                    fechaHoraHidden.value = `${fecha}T${horaSelect.value}:00`;
                }
            } catch {
                horaSelect.innerHTML = '<option value="">Error al cargar horarios</option>';
            }
        }

        doctorSelect.addEventListener('change', cargarSlots);
        fechaInput.addEventListener('change', cargarSlots);

        horaSelect.addEventListener('change', function () {
            const fecha = fechaInput.value;
            const hora = this.value;
            fechaHoraHidden.value = hora ? `${fecha}T${hora}:00` : '';
        });

        // Cargar slots al iniciar para poblar el select con la disponibilidad real
        cargarSlots();
    </script>
}
