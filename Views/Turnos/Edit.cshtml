@model UpdateTurnoDto

@{
    ViewData["Title"] = "Editar Turno";
    var id = ViewBag.Id;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning">
                <h4 class="mb-0"><i class="bi bi-pencil"></i> Editar Turno</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-route-id="@id" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="PacienteId" class="form-label">Paciente *</label>
                        <select asp-for="PacienteId" class="form-select" asp-items="@ViewBag.Pacientes">
                            <option value="">-- Seleccione un paciente --</option>
                        </select>
                        <span asp-validation-for="PacienteId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="DoctorId" class="form-label">Doctor *</label>
                        <select asp-for="DoctorId" class="form-select" asp-items="@ViewBag.Doctores">
                            <option value="">-- Seleccione un doctor --</option>
                        </select>
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaHora" class="form-label">Fecha *</label>
                            <input asp-for="FechaHora" type="date" class="form-control" />
                            <span asp-validation-for="FechaHora" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="hora" class="form-label">Hora *</label>
                            <input asp-for="FechaHora" type="time" class="form-control" />
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Estado" class="form-label">Estado *</label>
                        <select asp-for="Estado" class="form-select" asp-items="@ViewBag.Estados"></select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Motivo" class="form-label">Motivo de la Consulta</label>
                        <textarea asp-for="Motivo" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Motivo" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Observaciones" class="form-label">Observaciones</label>
                        <textarea asp-for="Observaciones" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Observaciones" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save"></i> Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
