@model IEnumerable<TurnoDto>

@{
    ViewData["Title"] = "Turnos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-calendar-check-fill"></i> Lista de Turnos</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Turno
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Fecha y Hora</th>
                        <th>Paciente</th>
                        <th>Doctor</th>
                        <th>Especialidad</th>
                        <th>Motivo</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var turno in Model)
                    {
                        <tr>
                            <td>
                                <strong>@turno.FechaHora.ToString("dd/MM/yyyy")</strong><br>
                                <small class="text-muted">@turno.FechaHora.ToString("HH:mm")</small>
                            </td>
                            <td>
                                <i class="bi bi-person"></i> @turno.PacienteNombre
                            </td>
                            <td>
                                <i class="bi bi-person-badge"></i> @turno.DoctorNombre
                            </td>
                            <td>
                                <i class="bi bi-star-fill text-warning"></i> @turno.DoctorEspecialidad
                            </td>
                            <td>@(turno.Motivo ?? "-")</td>
                            <td>
                                @switch (turno.Estado)
                                {
                                    case "Pendiente":
                                        <span class="badge bg-warning">@turno.Estado</span>
                                        break;
                                    case "Confirmado":
                                        <span class="badge bg-info">@turno.Estado</span>
                                        break;
                                    case "Completado":
                                        <span class="badge bg-success">@turno.Estado</span>
                                        break;
                                    case "Cancelado":
                                        <span class="badge bg-danger">@turno.Estado</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@turno.Estado</span>
                                        break;
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@turno.Id" class="btn btn-info" title="Ver detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@turno.Id" class="btn btn-warning" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@turno.Id" class="btn btn-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                <p class="text-muted mt-3">No hay turnos registrados</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Registrar primer turno
                </a>
            </div>
        }
    </div>
</div>
